<div class="row">
  {{#if links}}
    {{#each links}}
     <div class="col-md-3 mt-5">
       <div class="card ">
         <div class="card-header d-flex justify-content-between align-items-center">
                 <h1>{{title}}</h1>
                 <a href="/links/{{id}}/edit" class="btn btn-dark">EDIT</a>
         </div>
    
         <div class="card-body text-center">
          
           <a href="{{url}}">{{url}}</a>
           <p>{{DESCRIPTION}}</p>
           <form action="/links/{{id}}/delete?_method=DELETE" method="POST">
              <button type="submit"class="btn btn-danger">delete</button>
           </form>
         </div>
       </div>
     </div>
  {{/each}}
    {{else}}
   
       <div class="col-md-5 mx-auto mt-5">
         <div class="card ">
           <div class="card-body text-center">
              <h2>yout don't have link yet</h2>
              <a href="/links/add" class="btn btn-primary">create one</a>
           </div>
        </div>
       </div>
     
  {{/if}}
</div>