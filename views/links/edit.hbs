<div class="row">
  <div class="col-md-5 mx-auto mt-5">
      <div class="card">
       
        <div class="card-body">
           <form action="/links/{{link.id}}/edit?_method=PUT" method="post">
             <div class="form-group">
             <input type="text" name="title" value="{{link.title}}" class="form-control" placeholder="title">
           </div>
            <div class="form-group">
             <input type="text" name="url" value="{{link.url}}" class="form-control"  placeholder="url">
           </div>
            <div class="form-group">
             <input type="text" name="description" value="{{link.DESCRIPTION}}" class="form-control"  placeholder="description">
           </div>
           <button type="submit" class="btn btn-success btn-block">edit</button>
           </form>
        </div>
      </div>
  </div>
</div>